{% extends "base-front.html.twig" %}

{% block title %}Dictionnaire{% endblock %}

{% block body %}
<h1>Dictionnaire</h1>


<div class="col-12 border">
<table class="table table-secondary table-striped table-hover">
        <ul class="list-group">
        {% for vocabulaire in vocabulaires %}
        <li class="list-group-item p-0">
        <a  class="list-group-item list-group-item-action list-group-item-secondary entree p-0" href="{{ path("vocabulaire_detail", {'id': vocabulaire.id })}}">
        <div class="row m-0 p-0 h-100">
        <div class="col border">{{ vocabulaire.mot }}</div>
        <div class="col border">{{ vocabulaire.sens }}</div>
        {# <div class="col">{{ vocabulaire.contexte|raw }}</div> #}
        </div>
        </a>
        </li>
        {% endfor %}
        </ul>
        
    </table>
</div>


{{ knp_pagination_render(vocabulaires) }}
{% endblock %}
